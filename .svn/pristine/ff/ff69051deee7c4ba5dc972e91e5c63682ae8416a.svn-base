<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>功能源码查看</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" charset="UTF-8" />
    <link rel="stylesheet" type="text/css" href="../Scripts/jquery-easyui-1.4.1/themes/default/easyui.css" />
	<link rel="stylesheet" type="text/css" href="../Scripts/jquery-easyui-1.4.1/themes/icon.css" />
    <link rel="stylesheet" type="text/css" href="../Styles/Site.css" />
    <style type="text/css">
        table.sample {
	        border-width: 0px;
	        border-spacing: 0px;
	        border-style: hidden;
        }
        table.sample th {
	        border-width: 0px;
	        padding: 1px;
	        border-style: hidden;
        }
        table.sample td {
	        border-width: 0px;
	        padding: 1px;
	        border-style: hidden;
        }
    </style>
</head>

<style>
td{padding: 5px;}
</style>
    <script type="text/javascript">
        var MeID;
        //获取url参数
        function getUrlInfos(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return decodeURI(r[2]); return null;
        }
    </script>
<body>
<div class="easyui-panel" id='main' style="width:100%;height:600px;">
<table id="dg"  title="功能源码" style="width:100%;height:100%;overflow:auto;"
			data-options="
                singleSelect:true,
				url:'../funcCode/GetCodeList?rows=100000&funcID='+getUrlInfos('funcID'),
                loadMsg: '正在加载信息...',
                method: 'post',
                rownumbers:true,
                fitColumns:true,
                checkOnSelect:true,
                onLoadError:function (){
                     window.location.href='../ErrorPage/AuthorityError.html';
                }
                ">
		<thead>
			<tr>
			<th data-options="field:'id',width:100,fitColumns:true,hidden:true">关联ID</th>
				<th data-options="field:'funcID',width:100,fitColumns:true,hidden:true">功能ID</th>
				<th data-options="field:'codeID',width:80,fitColumns:true,hidden:true">源码ID</th>
				<th data-options="field:'codeName',width:80,fitColumns:true">源码名称</th>
                <th data-options="field:'codePath',width:120,fitColumns:true">路径</th>
			</tr>
		</thead>
	</table>
   </div>
    <input id ="bID" type="hidden" />

    <script type="text/javascript" src="../Scripts/jquery-easyui-1.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="../Scripts/json2str.js"></script>
	<script type="text/javascript" src="../Scripts/jquery-easyui-1.4.1/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="../Scripts/jquery-easyui-1.4.1/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript" src="../Scripts/PIE.js"></script>
    <script type="text/javascript" src="../Scripts/Common.js"></script>
    <script type="text/javascript">
        $(function () {
            if (window.PIE) {
                $('.rounded').each(function () {
                    PIE.attach(this);
                });
            }
            $("#main").height(window.innerHeight||document.documentElement.clientHeight||document.body.clientHeight);
            $('#dg').datagrid({
            	height:$("#main").height(),
                rowStyler: function (index, row) {
                    return 'font-size:18pt;';
                }
            });
        });
    </script>

</body>
</html>

		<div id="tb" style="height: 15px; background-color: White;"
			align="left">
		</div>
		<table id="dg" title="查询列表" style="width: 99%; min-height: 530px;"
			data-options="
				singleSelect: true,
                noheader:true,
                toolbar:'#tb',
                pagination:true,
                pageSize : 12,
                pageList: [12, 24,36],
                loadMsg: '正在加载信息...',
                method: 'post',
                rownumbers:true,
                fitColumns:true,
                onLoadError:function (){

                }
                ">
			<thead>
				<tr>
					<th data-options="field:'id',width:100,fitColumns:true,hidden:true">ID</th>
					<th data-options="field:'name',width:100,fitColumns:true,formatter:Nameformatter">名称</th>
					<th data-options="field:'type',width:100,fitColumns:true">类型</th>
					<th data-options="field:'src',width:100,fitColumns:true">路径</th>
					<th data-options="field:'tableName',width:100,fitColumns:true,hidden:true">表名</th>
					<th data-options="field:'url',width:160,fitColumns:true,hidden:true">url</th>
                    <th data-options="field:'menuID',width:160,fitColumns:true,hidden:true">菜单ID</th>
					<th data-options="field:'description',width:160,fitColumns:true">描述</th>
				</tr>
			</thead>
		</table>
	</div>
	<script type="text/javascript"
		src="../Scripts/jquery-easyui-1.4.1/jquery.min.js"></script>
	<script type="text/javascript" src="../Scripts/json2str.js"></script>
	<script type="text/javascript"
		src="../Scripts/jquery-easyui-1.4.1/jquery.easyui.min.js"></script>
	<script type="text/javascript"

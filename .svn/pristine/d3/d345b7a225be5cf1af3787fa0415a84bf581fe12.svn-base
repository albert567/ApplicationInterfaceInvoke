	<script type="text/javascript" src="../Scripts/PIE.js"></script>
	<script type="text/javascript" src="../Scripts/Common.js"></script>
	<script type="text/javascript" src="../Scripts/js/Search.js"></script>
	<script type="text/javascript" src="../Scripts/js/util.js"></script>
	<script type="text/javascript" >
		$(function() {
			if (window.PIE) {
				$('.rounded').each(function() {
					PIE.attach(this);
				});
			}
			$('#dg').datagrid({
				rowStyler : function(index, row) {
					return 'font-size:18pt;';
				}
			});
			$('#txtKeyWords').textbox('textbox').keydown(function(e){
		   		  console.log('123');
				   var searchText = $('#txtKeyWords').textbox('getValue');
		     	   if(searchText!=null&&e.keyCode==13){
		         	  findInfo();
		     	   }
		        });
		});
		
	</script>
